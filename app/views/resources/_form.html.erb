      <%= form_for @resource, html: { multipart: true } do |f| %>
        
       <div class="form">
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :url %><br>
          <%= f.text_area :url%>
        </div>
        <div class="field">
          <%= f.label :shortdescription %><br>
          <%= f.text_area :shortdescription %>
          <h3> Short 1-2 sentence description summarizing the resource </h3>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <%= f.label :tag %><br>
          <%= f.text_area :tag %>
          <h3> The tag is what kind of format the resource is : Course, Video, Book, etc. </h3>
        </div>
        <div class="field">
          <%= f.label :language %><br>
          <%= f.text_area :language %> 
          <h3> This must be either Rails, Javascript, Python, or Html. </h3>
        </div>
        <div class="field">
        <div id="imageform">
          <%= f.label :image %><br>
          <div class="field"> <%= f.file_field :image %> </div>
        <div class="removeimage">
          <% if f.object.image? %>
            <%= image_tag f.object.image.thumb.url %>
            <%= f.label :remove_image %>
            <%= f.check_box :remove_image %> 
          <% end %>
        </div>
        </div>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
      </div>


      <style>

      div.field {
        padding: 10px;
      }

      h3 {
          font-family: 'Roboto Condensed', sans-serif;  
        font-size: 17px;
        padding-top: 10px;
      }

      #imageform {
        display: inline-block;
        
      }

      div.field {
          padding-top: 20px;
      }



      </style>




