<link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
<h1> Learn Rails Resources </h1>
<div class="signupandin">
   <%= link_to "Home", resources_path %>
   <%= link_to "Sign Up", new_user_registration_path %>
   <%= link_to "Sign In", new_user_session_path %>
   <%= link_to "Add a resource", new_resource_path %>

</div>
<hr>
<div class="imageshow">
  <%= image_tag @resource.image.thumb.url.to_s %>
</div>
<div class="voteshow">
     <%= link_to like_resource_path(@resource), method: :put do %>
      <i class="em em---1"></i>
     <%= @resource.get_upvotes.size %>
     Upvote
    <% end %>
       

</div>



<div class="show">


<p>
  <b>Name:</b>
  <%= link_to @resource.title, @resource.url %>
</p>

<p>
  <b>Type:</b>
  <%= @resource.tag %>
</p>
<div class="description">
  <p>
    <b>Description:</b>
    <%= @resource.description %>
  </p>
</div>

</div>


<div class="destroyandedit">
   <% if @resource.user == current_user %>
    <%= link_to 'Destroy', @resource, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
   <%= link_to 'Edit', edit_resource_path %>
  <% end %>
</div>



<%= render 'disqus' %>


