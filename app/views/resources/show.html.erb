<link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">

<div class="signupandin">
   <%= link_to "Home", resources_path %>
   <%= link_to "Sign Up", new_user_registration_path %>
   <%= link_to "Sign In", new_user_session_path %>
   <%= link_to "Add a resource", new_resource_path %>

</div>

<%= image_tag @resource.image_url.to_s if @resource.image_url.present? %>
<div class="voteshow">
     <%= link_to like_resource_path(@resource), method: :put do %>
      <i class="em em---1"></i>
             Upvote -
     <%= @resource.get_upvotes.size %>
    <% end %>

     <%= link_to dislike_resource_path(@resource), method: :put do %>
      <i class="em em--1"></i>
         Downvote -
     <%= @resource.get_downvotes.size %>
     <% end %>

</div>



<div class="show">


<p>
  <b>Name:</b>
  <%= link_to @resource.title, @resource.url %>
</p>

<p>
  <b>Type:</b>
  <%= @resource.tag %>
</p>
<div class="description">
  <p>
    <b>Description:</b>
    <%= @resource.description %>
  </p>
</div>

</div>


<div class="destroyandedit">
   <% if @resource.user == current_user %>
    <%= link_to 'Destroy', @resource, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
   <%= link_to 'Edit', edit_resource_path %>
  <% end %>
</div>



<%= render 'disqus' %>


